<%= form_for [@calendar, @event] do |f| %>
<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@event.errors.count, "error") %> prohibited
      this event from being saved:
    </h2>

    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_field :note %>
  </div>

  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.datetime_select :start_time %>
  </div>

  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>

  <br>
  <h5>Location</h5>
  <%= f.fields_for :location do |loc| %>
    <%= loc.label :name %>
    <%= loc.text_field :name %><br>
    <%= loc.label :street_address %>
    <%= loc.text_field :street_address %><br>
    <%= loc.label :city %>
    <%= loc.text_field :city %><br>
    <%= loc.label :state %>
    <%= loc.text_field :state %><br>
    <%= loc.label :zipcode %>
    <%= loc.text_field :zipcode %><br>
  <% end %>
  <br>

  <p>Notify event to others</p>
  <%= f.collection_check_boxes :user_ids, User.where.not(id: current_user.id), :id, :username %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
